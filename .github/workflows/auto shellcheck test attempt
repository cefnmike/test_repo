name: Check Remote Script

on:
  push:
  pull_request:
  workflow_dispatch:

jobs:
  check-script:
    runs-on: ubuntu-latest

    steps:
      - name: Download script from URL
        run: |
          curl -fsSL https://example.com/script.sh -o script.sh
          chmod +x script.sh

      - name: Check script formatting and syntax
        run: |
          bash -n script.sh

      - name: Run shellcheck (optional but recommended)
        uses: ludeeus/action-shellcheck@v2
        with:
          scandir: '.'
